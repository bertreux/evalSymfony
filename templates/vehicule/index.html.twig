{% extends 'base.html.twig' %}

{% block title %}Vehicule{% endblock %}

{% block body %}
    <p>Vehicules disponibles</p>
    {% for vehicule in vehicules %}
        <h2>{{ vehicule.titre }}</h2>
        <p>{{ vehicule.description }}</p>
        <p>{{ vehicule.prixJournalier }}€ / {{ vehicule.marque }}</p>
        <a href="{{ path('app_reservation', {'id': vehicule.id}) }}" class="btn btn-success">Réserver</a>
    {% endfor %}
{% endblock %}
